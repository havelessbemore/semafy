{
  "name": "semafy",
  "version": "2.0.3",
  "description": "A robust cross-agent synchronization library.",
  "license": "MIT",
  "author": "Michael Rojas <dev.michael.rojas@gmail.com> (https://github.com/havelessbemore)",
  "homepage": "https://github.com/havelessbemore/semafy",
  "bugs": "https://github.com/havelessbemore/semafy/issues",
  "sideEffects": false,
  "engines": {
    "node": ">= 18"
  },
  "type": "module",
  "main": "./dist/semafy.cjs",
  "module": "./dist/semafy.mjs",
  "types": "./dist/semafy.d.ts",
  "exports": {
    ".": {
      "import": "./dist/semafy.mjs",
      "require": "./dist/semafy.cjs",
      "types": "./dist/semafy.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/havelessbemore/semafy.git"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc && rollup -c --configPlugin typescript",
    "build:docs": "typedoc",
    "format": "prettier . --write",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --collect-coverage --passWithNoTests"
  },
  "keywords": [
    "async",
    "concurrent",
    "condition variable",
    "counting semaphore",
    "lock",
    "lock guard",
    "lockable",
    "mutex",
    "parallel",
    "recursive mutex",
    "semaphore",
    "shared lock",
    "shared mutex",
    "sync",
    "threaded",
    "timed mutex",
    "web worker",
    "worker"
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "esbuild": "^0.21.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.17.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-license": "^3.3.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^4.0.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  }
}
