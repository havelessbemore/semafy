{
  "name": "semafy",
  "version": "1.0.4",
  "description": "Semaphore & Mutex implementation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/havelessbemore/semafy.git"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "docs": "rm -rf ./docs/* && typedoc --options typedoc.docs.json",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run lint && npm run build",
    "prepare": "husky install",
    "wiki": "rm -rf ./wiki/* && typedoc --options typedoc.wiki.json && sed -r -i'' -e 's/\\.\\/docs\\//\\.\\.\\/wiki\\//g' -e 's/(\\.\\.\\/wiki\\/)classes\\//\\1Class:%20/g' -e 's/\\.md//g' ./wiki/Home.md"
  },
  "keywords": [
    "async",
    "locks",
    "mutex",
    "semaphore",
    "sync",
    "synchronise",
    "synchronize"
  ],
  "author": "dev.michael.rojas@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typedoc": "^0.20.35",
    "typedoc-github-wiki-theme": "^0.2.0",
    "typedoc-plugin-markdown": "^3.7.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
